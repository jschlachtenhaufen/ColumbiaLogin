{
    "name": "Columbia Grad Login",
    "short_name": "Columbia Login",
    "version": "1.1",
    "author": "John Schlachtenhaufen",
    "description": "Automatically logs you into Columbia grad portal SSO when accessing Columbia pages",
    "permissions": ["storage", "declarativeContent"],
    "background": {
        "scripts": ["js/background.js"],
        "persisent": false
    },
    "content_scripts": [{
        "matches": ["*://cas.columbia.edu/*ogin*"],
        "js": ["js/main.js"]
    }],
    "browser_action": {
        "default_popup": "views/popup.html",
        "default_icon": {
            "16": "static/images/icon16.png",
            "32": "static/images/icon32.png",
            "48": "static/images/icon48.png",
            "128": "static/images/icon128.png"
        }
    },
    "options_page": "views/options.html",
    "icons": {
        "16": "static/images/icon16.png",
        "32": "static/images/icon32.png",
        "48": "static/images/icon48.png",
        "128": "static/images/icon128.png"
    },
    "manifest_version": 2
}
